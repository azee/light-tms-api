<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

    <bean class="ru.lighttms.tms.utils.MyPropertyPlaceholderConfigurer">
        <property name="locations" value="file:///etc/ligthtms/api/tms-api.properties"/>
    </bean>

    <bean id="apiProps" class="ru.lighttms.tms.beans.ConfigUtils">
        <property name="mongoReplicaSet"><value>${mongo.replicaSet}</value></property>
        <property name="mongoDbName"><value>${mongo.dbname}</value></property>
        <property name="mongoUserName"><value>${mongo.username}</value></property>
        <property name="mongoPassword"><value>${mongo.password}</value></property>
    </bean>

    <!--<bean class="ru.yandex.aqua.utils.CascadingMongoEventListener" />-->
</beans>